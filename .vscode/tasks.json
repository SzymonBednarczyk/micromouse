{
"version": "2.0.0",
"tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./bin/main",
            "dependsOn": [
                "build"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}